<?xml version="1.0"?>
<Container version="2">
  <Name>TeamSpeak3-MariaDB</Name>
  <Repository>blackbandit1804/teamspeak-mariadb:latest</Repository>
  <Registry>https://hub.docker.com/r/blackbandit1804/teamspeak-mariadb</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>none</Support>
  <Project>https://www.teamspeak.com/</Project>

  <!-- Beschreibung (kurz) -->
  <Overview>TeamSpeak 3 Server (Basis: ich777), vorbereitet für MariaDB. Empfohlen: ts3server.ini unter /teamspeak und EXTRA_START_PARAMS=inifile=/teamspeak/ts3server.ini. Getestet auf Unraid 7.1.4.</Overview>
  <Category>Network:Voip</Category>

  <WebUI/>
  <!-- deine eigene RAW-URL -->
  <TemplateURL>https://raw.githubusercontent.com/Blackbandit1804/docker-templates/main/blackbandit1804/TeamSpeak3-MariaDB.xml</TemplateURL>
  <!-- dein eigenes Icon -->
  <Icon>https://github.com/Blackbandit1804/docker-templates/raw/main/images/teamspeak3.png</Icon>

  <ExtraParams>--restart unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1761149417</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>

  <!-- Pfad -->
  <Config Name="Data Path" Target="/teamspeak" Default="/mnt/cache/appdata/teamspeak3"
          Mode="rw" Description="Persistent data directory" Type="Path"
          Display="always" Required="true" Mask="false">/mnt/cache/appdata/teamspeak3</Config>

  <!-- Ports -->
  <Config Name="UDP - Voice" Target="9987" Default="9987" Mode="udp"
          Description="UDP Voice Port" Type="Port"
          Display="always" Required="true" Mask="false">9987</Config>
  <Config Name="TCP1 - Query Port" Target="10011" Default="10011" Mode="tcp"
          Description="TCP Query Port" Type="Port"
          Display="always" Required="true" Mask="false">10011</Config>
  <Config Name="TCP2 - File Transfer" Target="30033" Default="30033" Mode="tcp"
          Description="TCP File Transfer Port" Type="Port"
          Display="always" Required="true" Mask="false">30033</Config>

  <!-- Variablen -->
  <Config Name="License agreement" Target="TS3SERVER_LICENSE" Default="accept" Mode=""
          Description="Setze auf 'accept' (oder 'view')." Type="Variable"
          Display="always" Required="true" Mask="false">accept</Config>
  <Config Name="Enable TSDNS" Target="ENABLE_TSDNS" Default="" Mode=""
          Description="Optional. Wenn aktiv, TCP 41144 zusätzlich mappen."
          Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="EXTRA_START_PARAMS" Target="EXTRA_START_PARAMS"
          Default="inifile=/teamspeak/ts3server.ini" Mode=""
          Description="ts3server Start-Parameter (empfohlen: nur INI referenzieren)."
          Type="Variable" Display="always" Required="true" Mask="false">inifile=/teamspeak/ts3server.ini</Config>

  <!-- Advanced -->
  <Config Name="LD_LIBRARY_PATH" Target="LD_LIBRARY_PATH" Default=""
          Mode="" Description="Nur setzen, falls unbedingt nötig (ich777 setzt libs automatisch)."
          Type="Variable" Display="advanced" Required="false" Mask="false">/teamspeak:/teamspeak/redist</Config>
  <Config Name="UMASK" Target="UMASK" Default="000" Mode=""
          Description="Nur ändern, wenn du weißt, was du tust."
          Type="Variable" Display="advanced" Required="true" Mask="false">000</Config>
  <Config Name="UID" Target="UID" Default="99" Mode=""
          Description="Unraid 'nobody'."
          Type="Variable" Display="advanced" Required="true" Mask="false">99</Config>
  <Config Name="GID" Target="GID" Default="100" Mode=""
          Description="Unraid 'users'."
          Type="Variable" Display="advanced" Required="true" Mask="false">100</Config>
  <Config Name="DATA_PERM" Target="DATA_PERM" Default="770" Mode=""
          Description="chmod auf Data Path."
          Type="Variable" Display="advanced" Required="true" Mask="false">770</Config>
</Container>
